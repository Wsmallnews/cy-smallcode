<view class='container'>
  <view class='wallet-bg'>
    <view class='wallet-bgpic'>
      <view class='wallet-money'>
        <text class='font30'>余额</text>
        <text class='money-num'>32880.23</text>
      </view>
      <view class='wallet-card'>
        <text>车主卡号</text>
        <text>6200 1234 5678 0500 123</text>
      </view>
    </view>
  </view>

  <view class='wallet-buttonbox'>
    <view class='wallet-iconbox' bindtap="onrecharge">
      <image src='../../images/wallet-icon1.png'></image>
      <text>充值</text>
    </view>
    <view class='wallet-iconbox' bindtap="onextract">
      <image src='../../images/wallet-icon2.png'></image>
      <text>提现</text>
    </view>
    <view class='wallet-iconbox' bindtap="onTapmodify">
      <image src='../../images/wallet-icon3.png'></image>
      <text>密码</text>
    </view>
    <view class='wallet-iconbox' bindtap="onTaptrade">
      <image src='../../images/wallet-icon4.png'></image>
      <text>记录</text>
    </view>
  </view>
</view>