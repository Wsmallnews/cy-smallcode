page{
  background: #fff;
}
.recharge-tr{
  background: #fff;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  line-height: 50rpx;
  align-items:center;
  border-top: 1px solid #e6e6e6;
  border-bottom:20rpx solid #f5f5f5;
  position: relative;
  overflow: hidden;
}
.recharge-tr text.recharge-zd{
  width: 200rpx;
  font-size: 28rpx;
  display: inline-block;
}
.recharge-tr input{
  width:100%;
  font-size: 28rpx;
}
.triangle-right{
  width: 12rpx;
  height: 22rpx;
  position: absolute;
  right: 20rpx;
  top:50%;
  margin-top: -11rpx;
}

.extract-money{
  background: #fff;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e6e6e6;
}
.extract-money text{
  display: block;
  font-size: 28rpx;
  width: 100%;
}
.extract-input{
  display: flex;
  flex-direction: row;
  align-items:center;
  margin-top: 20rpx;
}
.extract-input text{
  font-size: 40rpx;
  width: 50rpx;
  color: #333;
}
.extract-input input{
  width: 100%;
  font-size: 60rpx;
  color: #333;
}

.money-text{
  padding: 20rpx;
  overflow: hidden;
}
.money-text text{
  font-size: 28rpx;
  color: #999;
}


.xn-keyboard{
  width: 100%;
  background: #fff;
  position:fixed;
  left: 0;
  bottom: 0;
  border: 1px solid #e6e6e6;
  border-left: 0;
  border-right: 0;
}
.keyboard-num{
  width: 33.333%;
  text-align: center;
  float: left;
  font-size: 52rpx;
  padding: 3% 0;
  box-sizing: border-box;
  border-bottom: 1px solid #e6e6e6;
  border-right: 1px solid #e6e6e6;
}
.keyboard-num:last-child{
  background: #f0f0f0;
}
.keyboard-num:last-child image{
  width: 60rpx;
  height: 44rpx;
}

.extract-text{
  text-align: center;
  font-size: 28rpx;
  color: #999;
}