page {
  line-height: 1.6;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
}
icon {
  vertical-align: middle;
}
.weui-cells {
  position: relative;
  margin-top: 1.17647059em;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 17px;
}
.weui-cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #e6e6e6;
  color: #333;
}
.weui-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  color: #D9D9D9;
}
.weui-cells_after-title {
  margin-top: 0;
}
.weui-cell {
  padding: 20rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.weui-cell:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #e6e6e6;
  color: #333;
}
.weui-cell:first-child:before {
  display: none;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
          display: flex;
          flex-direction: row;
          align-items: center;
}
.weui-cell__bd text{
   font-size: 28rpx;
   color: #333;
}
.weui-cell__bd image{
   width: 54rpx;
   height: 54rpx;
   margin-right: 16rpx;
}

.weui-cell__ft {
  text-align: right;
  color: #999999;
}
.weui-icon-radio {
  margin-left: 3.2px;
  margin-right: 3.2px;
}
.weui-check__label:active {
  background-color: #ECECEC;
}
.weui-check {
  position: absolute;
  left: -9999px;
}

.add-bank{
  width: 100%;
  background: #fff;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  text-align: center;
}
.add-bank image{
  width: 80rpx;
  height: 80rpx;
}
.add-bank text{
  display: block;
  font-size: 28rpx;
  color: #333;
}



