.recharge-warn{
  width: 100%;
  border-top: 1px solid #e6e6e6;
  padding: 20rpx;
  text-align: center;
  box-sizing: border-box;
  color: #999;
  font-size: 26rpx;
}
.recharge-list-box{

}
.recharge-tr{
  background: #fff;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  line-height: 50rpx;
  align-items:center;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}
.recharge-tr text.recharge-zd{
  width: 200rpx;
  font-size: 28rpx;
  display: inline-block;
}
.recharge-tr input{
  width:100%;
  font-size: 28rpx;
}
.triangle-right{
  width: 12rpx;
  height: 22rpx;
  position: absolute;
  right: 20rpx;
  top:50%;
  margin-top: -11rpx;
}

.xn-keyboard{
  width: 100%;
  background: #fff;
  position:fixed;
  left: 0;
  bottom: 0;
  border: 1px solid #e6e6e6;
  border-left: 0;
  border-right: 0;
}
.keyboard-num{
  width: 33.333%;
  text-align: center;
  float: left;
  font-size: 52rpx;
  padding: 3% 0;
  box-sizing: border-box;
  border-bottom: 1px solid #e6e6e6;
  border-right: 1px solid #e6e6e6;
}
.keyboard-num:last-child{
  background: #f0f0f0;
}
.keyboard-num:last-child image{
  width: 60rpx;
  height: 44rpx;
}




.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}

.close_icon {
  width: 19rpx;
  height: 34rpx;
  position: absolute;
  left: 30rpx;
  top:28rpx;
}
.close_icon image{
  width: 19rpx;
  height: 34rpx;
}

.drawer_attr_content {
  padding: 20rpx;
  height: 600rpx;
  overflow-y: scroll;
}


.drawer_desc{
    font-size:26rpx;
    margin:20rpx;
}
.pay-tit{
 padding: 30rpx;
 text-align: center;
 font-size: 34rpx;
 border-bottom: 1px solid #e6e6e6;
 color: #333;
}

.password_center{
  width: 100%;
  overflow: hidden;
  padding: 10rpx;
  box-sizing: border-box;
}
.password_center .text_center{
  width: 16%;
  float: left;
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
  border: 1px solid #e6e6e6;
  border-right: none;
}
.password_center .text_center:last-child{
  border-right: 1px solid #e6e6e6;
}
.garybg{
  background: #f0f0f0;
  color: #f0f0f0;
}



